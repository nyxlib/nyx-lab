{
    "productName": "nyx-dashboard",
    "version": "1.0.0",
    "identifier": "org.nyxlib.dashboard",
    "build": {
        "beforeDevCommand": "npm run app-prod",
        "beforeBuildCommand": "npm run app-prod",
        "devUrl": "http://localhost:1234/",
        "frontendDist": "../app/dist/"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "height": 800,
                "width": 1300,
                "minHeight": 800,
                "minWidth": 1300,
                "visible": true,
                "maximized": true,
                "title": "Nyx Dashboard",
                "decorations": false,
                "transparent": true,
                "url": "index.html"
            },
            {
                "label": "addons",
                "height": 800,
                "width": 1300,
                "minHeight": 800,
                "minWidth": 1300,
                "visible": false,
                "maximized": false,
                "title": "Nyx Addon Index",
                "decorations": true,
                "transparent": false,
                "url": "https://addons.nyxlib.org/"
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": [
            "appimage",
            "dmg",
            "msi"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}

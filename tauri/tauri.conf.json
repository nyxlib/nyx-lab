{
    "productName": "pollux",
    "version": "1.0.0",
    "identifier": "io.odier.pollux",
    "build": {
        "beforeDevCommand": "npm run app-prod",
        "beforeBuildCommand": "npm run app-prod",
        "devUrl": "http://localhost:5173/",
        "frontendDist": "../app/dist/"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "height": 800,
                "width": 1200,
                "minHeight": 800,
                "minWidth": 1200,
                "visible": true,
                "maximized": true,
                "title": "Pollux",
                "decorations": false,
                "transparent": true,
                "url": "index.html"
            },
            {
                "label": "addons",
                "height": 800,
                "width": 1200,
                "minHeight": 800,
                "minWidth": 1200,
                "visible": false,
                "maximized": false,
                "title": "Addon Index",
                "decorations": true,
                "transparent": false,
                "url": "https://addons.nyxlib.org/"
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": [
            "app",
            "appimage"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
